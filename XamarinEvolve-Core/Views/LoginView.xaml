<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
        Padding="32,48,32,0"
        xmlns="http://xamarin.com/schemas/2014/forms" 
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
        x:Class="XamarinEvolve.Core.Views.LoginView">

    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Vertical">
                <Label Text="Logging in as:" />
                <Label x:Name="Email" />
            </StackLayout>

            <StackLayout Orientation="Vertical" Padding="0,16,0,0">
                <Label Text="Password:" />
                <Entry x:Name="Password" IsPassword="true" />
            </StackLayout>

            <Button x:Name="Login" Text="Login" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
